<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="9dp"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:textSize="19sp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/aladin"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birth"
                android:textSize="15dp"
                android:textAlignment="center"
                android:fontFamily="@font/athiti_medium"
                android:layout_below="@id/name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/eyeColor"
                android:textSize="15dp"
                android:text="Eye"
                android:fontFamily="@font/athiti_medium"
                android:layout_below="@id/birth"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:id="@+id/height"
                android:fontFamily="@font/athiti_medium"
                android:layout_below="@id/eyeColor"/>
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:fontFamily="@font/athiti_medium"
                android:layout_below="@id/height"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:id="@+id/created"
                android:fontFamily="@font/athiti_medium"
                android:layout_below="@id/gender"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/destroyed"
                android:textSize="15dp"
                android:fontFamily="@font/athiti_medium"
                android:textAlignment="center"
                android:layout_below="@id/created"/>


            <TextView
                android:layout_below="@id/destroyed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Affiliations"
                android:textSize="15dp"
                android:fontFamily="@font/athiti_medium"
                android:textAlignment="center"
                android:id="@+id/affiliations"/>
            <TextView
                android:layout_below="@id/affiliations"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:fontFamily="@font/athiti_medium"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/masters"/>
            <TextView
                android:layout_below="@id/masters"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/athiti_medium"
                android:id="@+id/apprentices"/>

<!--            <TextView-->
<!--                android:id="@+id/title"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@id/name"-->
<!--                android:fontFamily="@font/amarante"-->
<!--                android:layout_marginBottom="12dp"-->
<!--                android:gravity="center_horizontal"-->
<!--                android:text="Affiliations"-->
<!--                android:textColor="#AC6A08"-->
<!--                android:textSize="20dp" />-->

<!--            <TextView-->
<!--                android:layout_below="@id/title"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:id="@+id/affiliations"/>-->


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/affiliations"
            android:drawableLeft="@drawable/ic_save_black_24dp"
            android:text="Save"
            android:background="@android:color/white"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/save"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_list_black_24dp"
            android:text="list"
            android:textColor="@android:color/black" />

    </LinearLayout>

</RelativeLayout>

